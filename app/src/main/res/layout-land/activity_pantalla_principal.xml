<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaPrincipalActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="19dp" />

                <RelativeLayout
                    android:layout_width="361dp"
                    android:layout_height="91dp"
                    android:layout_gravity="center"
                    android:background="@drawable/contenedor">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="184dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginEnd="141dp"
                        android:layout_marginBottom="21dp"
                        android:fontFamily="@font/architects_daughter"
                        android:text="¿Listo para Trabajar?"
                        android:textColor="#E3793B" />

                    <TextView
                        android:id="@+id/tvSaludo_PantallaPrincipal"
                        android:layout_width="240dp"
                        android:layout_height="37dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="43dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginEnd="129dp"
                        android:layout_marginBottom="42dp"
                        android:fontFamily="@font/architects_daughter"
                        android:text="Hola"
                        android:textColor="#0C0C0C"
                        android:textSize="34sp" />

                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:id="@+id/LY_Info_PantallaPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="171dp"
                        android:layout_height="158dp"
                        app:srcCompat="@drawable/escribir" />

                    <TextView
                        android:id="@+id/tvInfo_pantallaPrincipal"
                        android:layout_width="239dp"
                        android:layout_height="142dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/architects_daughter"
                        android:text="Organizer es una app desarrollada por estudiantes de la Universidad Politécnica de Pachuca con la finalidad de ayudar a estudiantes y demás personas en su organización de tareas diarias de manera ágil." />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="19dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="469dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />

                        <TextView
                            android:id="@+id/textView39"
                            android:layout_width="257dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/architects_daughter"
                            android:text="Empieza con tu organización !!"
                            android:textSize="34sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <TextView
                            android:id="@+id/tvIrAgenda"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/architects_daughter"
                            android:gravity="center"
                            android:background="@drawable/contenedor"
                            android:text="AGENDA"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="9dp" />

                        <TextView
                            android:id="@+id/tvIrTareas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/architects_daughter"
                            android:gravity="center"
                            android:background="@drawable/contenedor"
                            android:text="TAREAS"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="9dp" />

                        <TextView
                            android:id="@+id/textView40"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/architects_daughter"
                            android:gravity="center"
                            android:background="@drawable/contenedor"
                            android:text="RECORDATORIOS"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="52dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/estudiante" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include layout="@layout/nav_drawer" />

    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>