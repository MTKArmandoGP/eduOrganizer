<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".PantallaPrincipalActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="571dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/contenedor">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="176dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="33dp"
                        android:layout_marginTop="51dp"
                        android:fontFamily="@font/architects_daughter"
                        android:text="¿Listo para Trabajar?"
                        android:textColor="#E3793B" />

                    <TextView
                        android:id="@+id/tvSaludo_PantallaPrincipal"
                        android:layout_width="240dp"
                        android:layout_height="37dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginEnd="151dp"
                        android:layout_marginBottom="42dp"
                        android:fontFamily="@font/architects_daughter"
                        android:text="Hola"
                        android:textColor="#0C0C0C"
                        android:textSize="34sp" />

                </RelativeLayout>
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="157dp"
                        android:layout_height="156dp"
                        app:srcCompat="@drawable/escribir" />

                    <TextView
                        android:id="@+id/tvInfo_pantallaPrincipal"
                        android:layout_width="489dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/architects_daughter"
                        android:text="Organizer es una app desarrollada por estudiantes de la Universidad Politécnica de Pachuca con la finalidad de ayudar a estudiantes y demás personas en su organización de tareas diarias de manera ágil." />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/LY_Datos_PantallaPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="296dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="84dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvIntegrantes_PantallaPrincipal"
                                android:layout_width="249dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/architects_daughter"
                                android:text="Integrantes:"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="241dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/architects_daughter"
                                android:text="José Armando García Paredes" />

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="240dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/architects_daughter"
                                android:text="Gael Arath Diaz Lugo" />

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="240dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/architects_daughter"
                                android:text="Guillermo García Gonzales" />

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="241dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/architects_daughter"
                                android:text="Kevin Martin Estrada Santos" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="334dp"
                        android:layout_height="145dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/upp" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="18dp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/architects_daughter"
                    android:gravity="center"
                    android:text="Funciones"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/architects_daughter"
                        android:gravity="center"
                        android:text="Agenda"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/architects_daughter"
                        android:gravity="center"
                        android:text="Tareas"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="383dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/architects_daughter"
                        android:gravity="center"
                        android:text="Organiza tus proximos eventos de forma práctica con fecha y hora." />

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/architects_daughter"
                        android:gravity="center"
                        android:text="Añade tus tareas para tener un mejor control sobre ellas." />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvIrAgenda"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/contenedor"
                        android:gravity="center"
                        android:text="IR A AGENDA"
                        android:textColor="#919090"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvIrTareas"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/contenedor"

                        android:gravity="center"
                        android:text="IR A TAREAS"
                        android:textColor="#919090"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="207dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/architects_daughter"
                        android:gravity="center"
                        android:text="Recordatorios"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="204dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/architects_daughter"
                        android:gravity="center"
                        android:text="Programa recordatorios para no olvidar de hacer eso que es tan importante." />

                    <Space
                        android:layout_width="53dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvIrRecordatorios"
                        android:layout_width="5dp"
                        android:layout_height="39dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/contenedor"

                        android:gravity="center"
                        android:text="IR A RECORDATORIOS"
                        android:textColor="#919090"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include layout="@layout/nav_drawer" />

    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>